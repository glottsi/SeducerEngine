<UserControl x:Class="WPF.PressAnyKeyScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="Screen_Loaded"
            >
  
    <Grid x:Name="SplashScreenGrid" Opacity="1">
       
        <Grid.RowDefinitions>
          
            <RowDefinition Height="25*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        
        <Image Name="Img"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <TextBlock x:Name="PressAnyKeyTextBlock"  FontFamily="Comic Sans MS"
                
                   FontSize="48"
                   TextAlignment="Center"
                   Grid.Row="1">
            <TextBlock.Foreground>
                <SolidColorBrush x:Name="PressAnyKeyTextBlockBrush" Color="AntiqueWhite"/>
            </TextBlock.Foreground>
            PRESS ANY KEY TO START
        </TextBlock>

    </Grid>
</UserControl>